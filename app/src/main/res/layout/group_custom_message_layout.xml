<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/global_group_custom_message_layout_RelativeLayout"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView
        android:id="@+id/group_custom_message_layout_receiverName_textView"
        android:layout_width="wrap_content"
        android:background="@drawable/receiver_message_layout"
        android:layout_marginStart="15dp"
        android:text="@string/username"
        android:textSize="15sp"
        android:padding="3dp"
        android:textColor="#090909"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/group_custom_message_layout_senderName_textView"
        android:layout_width="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_alignParentRight="true"
        android:text="@string/username"
        android:layout_height="wrap_content"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/group_custom_message_layout_imageView"
        android:layout_width="45dp"
        android:layout_below="@+id/group_custom_message_layout_receiverName_textView"
        android:layout_height="45dp"
        android:src="@drawable/userdefaultprofile"
        android:layout_margin="5dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:text="@string/displayName"
        android:background="@drawable/receiver_message_layout"
        android:layout_below="@+id/group_custom_message_layout_receiverName_textView"
        android:id="@+id/group_custom_message_layout_receiverMessage_TextView"
        android:layout_toRightOf="@+id/group_custom_message_layout_imageView"
        android:layout_margin="7dp"
        android:padding="3dp"
        android:textSize="16sp"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:padding="3dp"
        android:text="@string/displayName"
        android:id="@+id/group_custom_message_layout_senderMessage_TextView"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/group_custom_message_layout_senderName_textView"
        android:layout_margin="7dp"
        android:textSize="16sp"
        android:background="@drawable/sender_message_layout"
        android:layout_height="wrap_content"/>


    <ImageView
        android:id="@+id/group_custom_message_layout_reciever_imageView"
        android:layout_width="125dp"
        android:layout_below="@+id/group_custom_message_layout_receiverName_textView"
        android:layout_height="125dp"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/userdefaultprofile"/>
    <TextView
        android:layout_width="115dp"
        android:text="@string/displayName"
        android:background="@drawable/receiver_message_layout"
        android:layout_below="@+id/group_custom_message_layout_reciever_imageView"
        android:id="@+id/group_custom_message_layout_receiverFilesDateAndTime_TextView"
        android:layout_toRightOf="@+id/group_custom_message_layout_imageView"

        android:padding="3dp"
        android:textSize="12dp"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/group_custom_message_layout_sender_imageView"
        android:layout_width="125dp"
        android:layout_below="@+id/group_custom_message_layout_receiverName_textView"
        android:scaleType="centerCrop"
        android:layout_margin="5dp"
        android:layout_height="125dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/userdefaultprofile"/>
    <TextView
        android:layout_width="115dp"
        android:padding="3dp"
        android:text="@string/displayName"
        android:id="@+id/group_custom_message_layout_senderFilesDateAndTime_TextView"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/group_custom_message_layout_sender_imageView"
        android:textColor="@color/white"
        android:layout_marginRight="10dp"
        android:textSize="12sp"
        android:background="@drawable/sender_message_layout"
        android:layout_height="wrap_content"/>


</RelativeLayout>