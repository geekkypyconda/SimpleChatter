<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settingspane.SettingsActivity">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/SettingsActivity_circleImageView"
        android:layout_width="150dp"
        android:src="@drawable/defaultgroupicon"
        android:layout_marginStart="105dp"
        android:layout_marginTop="15dp"
        android:layout_height="150dp"/>

    <TextView
        android:id="@+id/SettingsActivity_userName_textView"
        android:layout_width="match_parent"
        android:layout_below="@id/SettingsActivity_circleImageView"
        android:text="@string/username"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:textColor="#000000"
        android:clickable="false"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/SettingsActivity_accountSettingsTab_textView"
        android:layout_below="@+id/SettingsActivity_userName_textView"
        android:layout_marginTop="55dp"
        android:textSize="25sp"
        android:text="@string/accS"
        android:textAlignment="textStart"
        android:paddingTop="5dp"
        android:clickable="true"
        android:drawableEnd="@drawable/editar"
        android:paddingStart="10dp"
        android:layout_height="50dp"/>
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/SettingsActivity_logOutTab_textView"
        android:layout_below="@+id/SettingsActivity_accountSettingsTab_textView"
        android:layout_marginTop="85dp"
        android:textSize="25sp"
        android:text="@string/lgout"
        android:textAlignment="textStart"
        android:paddingTop="5dp"
        android:clickable="true"
        android:paddingStart="10dp"
        android:layout_height="50dp"/>


</RelativeLayout>