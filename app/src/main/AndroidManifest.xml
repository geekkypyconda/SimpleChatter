<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.simplechatter">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/sciconsmall"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/sciconsmall"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".settingspane.AccountSettingsActivity"></activity>
        <activity android:name=".groupchatactivties.GroupSettingsActivity" />
        <activity android:name=".groupchatactivties.DisplayAllEditableGroupContactsActivity" />
        <activity android:name=".chatactivity.ImageViewerActivity" />
        <activity
            android:name=".chatactivity.OneToOneChatActivity"
            android:parentActivityName=".HomeScreenActivity" />
        <activity android:name=".AboutInfoSection.SendChatRequestToUserActivity" />
        <activity
            android:name=".FindFriendsActivity"
            android:parentActivityName=".HomeScreenActivity" />
        <activity android:name=".groupchatactivties.GroupChatActivity" />
        <activity android:name=".AboutInfoSection.ReportBugActivity" />
        <activity android:name=".AboutInfoSection.AboutActivity" />
        <activity android:name=".AboutInfoSection.FeedbackActivity" />
        <activity android:name=".settingspane.SettingsActivity" />
        <activity android:name=".numberemailpasssignin.LoginWithEmailActivity" />
        <activity android:name=".HomeScreenActivity" />
        <activity android:name=".SetUpUserActivity" />
        <activity
            android:name=".numberemailpasssignin.VerificationCodeActivity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
    </application>

</manifest>